{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node", // Changed from "Bundler" to "Node"
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false, // Changed from true to false
    "noImplicitAny": false, // Added to allow implicitly any types
    "noUnusedLocals": false, // Changed from true to false
    "noUnusedParameters": false, // Changed from true to false
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false, // Changed from true to false
    "noImplicitReturns": false, // Changed from true to false
    "noImplicitOverride": false, // Changed from true to false
    "useUnknownInCatchVariables": false // Changed from true to false
  },
  "include": [
    "src"
  ]
}